	margin: 0

.d2
	font-size: (42/16)rem
	line-height: (50/16)rem
	font-weight: 500
	letter-spacing: -0.03em
.d1
	font-size: (42/16)rem
	line-height: (50/16)rem
	letter-spacing: -0.03em
	font-weight: 100
.h1
	font-size: (28/16)rem
	line-height: (36/16)rem
	font-weight: 100
	max-width: 24em
	letter-spacing: -0.01em
.h2
	font-size: (20/16)rem
	line-height: (26/16)rem
	font-weight: 400
	max-width: 28em
	letter-spacing: -0.01em
.h3
	font-size: (16/16)rem
	line-height: (22/16)rem
	font-weight: 600
	max-width: 32em
.body
	font-size: (16/16)rem
	line-height: (22/16)rem
.small
	font-size: (14/16)rem
	line-height: (20/16)rem
.legal
	font-size: (12/16)rem
	line-height: (16/16)rem

