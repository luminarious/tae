body
	line-height: 1.5
	font-family: 'Segoe UI Regular EastEuropean', 'Segoe UI', 'Segoe WP', system-ui, -apple-system, Roboto, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji','Segoe UI Symbol'
	color: color.text
	@extend .body
	@supports (font-variant-ligatures: common-ligatures)
		font-feature-settings: normal
		font-variant-ligatures: common-ligatures

h1
	@extend .h1
h2
	@extend .h2
h3
	@extend .h3

figcaption,
small
	@extend .small

p
	margin: 0 0 1rem

text
	&-right
		text-align: right