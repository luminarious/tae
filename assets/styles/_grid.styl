[class^="grid-"]
	//outline: rgba(0,0,0,0.4) solid

#__layout > *
	height: 100vh
.grid-app
	display: grid
	grid-template-areas: "top" "txt" "bar"
	grid-template-rows: auto 1fr
	@media screen and (min-width: 1080px)
		grid-template-areas: "top top" "bar txt"
		grid-template-rows: auto 1fr
		grid-template-columns: 17rem 1fr
		column-gap: 1rem

.grid-top
	grid-area: top
.grid-bar
	grid-area: bar
.grid-txt
	display: grid
	grid-area: txt
	grid-template-columns: repeat(7, 1fr)
	grid-auto-rows: min-content
	grid-gap: 1rem
	margin: space.l 1.5rem space.l 0
	overflow: scroll

	section
	figure
	table
	h1
	h2
	h3
	p
		grid-column: 2/6

.grid-1-3
	grid-column: 1/3
.grid-3-8
	grid-column: 3/8