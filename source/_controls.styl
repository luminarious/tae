$ui-control
	-webkit-appearance: none
	-moz-appearance: none
	appearance: none
	border: 2px solid hue.B4
	color: inherit
	height: 1.8rem
	line-height: 1rem
	outline: 0
	padding: 0 space.s
	vertical-align: middle
	width: 100%
	height: 2rem
	border-radius: space.xs
	background: hue.B1

label
	display: block
	height: 5rem
	display: flex
	flex-direction: column
	line-height: 1.75rem
	span::first-letter
		text-transform: uppercase

	input:not([type=checkbox]):not([type=radio])
		@extend $ui-control
			
	select
		@extend $ui-control
		&[size],
		&[multiple]
			height: auto
		&:not([multiple]):not([size])
			background-image: url("data:image/svg+xml;charset=utf8,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20viewBox='0%200%204%205'%3E%3Cpath%20fill='%23667189'%20d='M2%200L0%202h4zm0%205L0%203h4z'/%3E%3C/svg%3E")
			background-repeat: no-repeat
			background-position: right space.s center
			background-size: space.s space.m
			padding-right: space.l
	